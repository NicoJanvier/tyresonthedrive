<Dialog
    xmlns="sap.m"
    id="noteDialog"
	title="New note"
    stretch="true">
    <buttons>
        <Button
            text="Close"
            press="onCloseDialog"/>
        <Button
            text="Submit"
            press="saveNote"/>
    </buttons>
    <content>
        <TextArea
            width="100%"
            growing="true"
            value="{InputModel>/InputValue}"/>
    </content>
</Dialog>