<Dialog
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    id="noteDialog"
	title="New note"
    stretch="true">
    <buttons>
        <Button
            text="Close"
            press="onCloseDialog"/>
        <Button
            text="Submit"
            press="saveNote"/>
    </buttons>
    <content>
        <VBox>
            <HBox
                justifyContent="SpaceBetween">
                <Input
                    type="Text"
                    placeholder="Title"
                    value="{InputModel>/InputTitle}"/>
                <Select
                    id="tagSelect"
                    items="{TagModel>/tags}">
                    <core:ListItem
                        key="{TagModel>id}"
                        text="{TagModel>text}"/>
                </Select>
            </HBox>
            <TextArea
                width="100%"
                growing="true"
                value="{InputModel>/InputValue}"/>
        </VBox>        
    </content>
</Dialog>