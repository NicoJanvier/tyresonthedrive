<Dialog
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    id="noteDialog"
	title="New note"
    stretch="true">
    <buttons>
        <Button
            text="Close"
            press="onCloseDialog"/>
        <Button
            text="Submit"
            press="saveNote"/>
    </buttons>
    <content>
        <VBox>
            <HBox>
                <Input
                    width="70%"
                    type="Text"
                    placeholder="Title"
                    value="{InputModel>/InputTitle}"/>
                <Select
                    id="tagSelect"
                    width="30%"
                    items="{TagModel>tags}">
                    <core:ListItem
                        key="{TagModel>id}"
                        text="{TagModel>text}"
                        icon="{TagModel>icon}"/>
                </Select>
            </HBox>
            <TextArea
                width="100%"
                growing="true"
                value="{InputModel>/InputValue}"/>
        </VBox>        
    </content>
</Dialog>