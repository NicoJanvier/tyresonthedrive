<mvc:View
  controllerName="HelloWorld.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
    <Page
      id="mainPage"
      height="-webkit-fill-available"
      enableScrolling="false"
      showFooter="false"
      backgroundDesign="List">
      <customHeader>
        <Bar>
          <contentMiddle>
            <Text text="Note App"/>
          </contentMiddle>
          <contentRight>
            <Button
              icon="sap-icon://add"
              press="onNewNote"/>
          </contentRight>
        </Bar>
      </customHeader>
      <content>
        <ScrollContainer
          height="100%"
          vertical="true"
          horizontal="false">
          <content>
            <List
              items="{path: 'ListModel>/noteList', sorter: {path: 'date'}}">
              <CustomListItem>
                <Panel
                  expanded="true">
                  <headerToolbar>
                    <Toolbar>
                      <Label text="{ListModel>tag}"/>
                      <ToolbarSeparator/>
                      <Label
                        text="{ListModel>title}"
                        design="Bold"/>
                      <ToolbarSpacer/>
                      <Button
                        icon="sap-icon://edit"
                        press="onEditNote"/>
                      <Button
                        icon="sap-icon://decline"
                        press="onDeleteNote"/>
                    </Toolbar>                    
                  </headerToolbar>
                  <content>
                    <VBox>
                      <Text text="{ListModel>note}"/>
                      <Text class="dateNote" text="{ListModel>dateString}"/>
                    </VBox>
                  </content>
                </Panel>
              </CustomListItem>
            </List>
          </content>
        </ScrollContainer>
      </content>
    </Page>
</mvc:View>