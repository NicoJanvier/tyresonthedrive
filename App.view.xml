<mvc:View
  controllerName="HelloWorld.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
      <Page title="TyresOnTheDrive Test">
        <content>        
          <Text value="This is a quicknote app."/>
          
        </content>
      </Page>
      <Panel
            headerText="Please enter you thought.">
            <content>
              <TextArea
                growing="true"
                valueLiveUpdate="true"
                value="{InputModel>/InputValue}"/>
                <Text value="Input: {InputModel>/InputValue}"/>
            </content>
          </Panel>
      <Button
        id="helloButton"
        type="Emphasized"
        icon="sap-icon://sap-ui5"
        text="Say Hello"
        press="onShowHello"
        class="sapUiSmallMargin"/>
</mvc:View>