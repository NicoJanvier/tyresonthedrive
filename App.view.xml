<mvc:View
  controllerName="HelloWorld.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
    <Page
      id="mainPage"
      height="-webkit-fill-available"
      enableScrolling="false"
      showFooter="false"
      backgroundDesign="List">
      <customHeader>
        <Bar>
          <contentMiddle>
            <Label
              text="Note App"
              design="Bold"/>
          </contentMiddle>
          <contentRight>
            <Button
              icon="sap-icon://add"
              press="onNewNote"/>
          </contentRight>
        </Bar>
      </customHeader>
      <content>
        <ScrollContainer
          height="100%"
          vertical="true"
          horizontal="false">
          <content>
            <List
              id="mainList"
              noDataText="You have no Note yet!"
              items="{ListModel>/noteList}">
              <headerToolbar>
                <Toolbar>
                  <Button
                    text="Sort by Date"
                    icon="sap-icon://sort-ascending"
                    press="onPressSort"/>
                  <Button
                    text="Sort by Tag"
                    icon="sap-icon://sort-ascending"
                    press="onPressSortTag"/>
                </Toolbar>
              </headerToolbar>
              <CustomListItem>
                <Panel
                  expanded="true">
                  <headerToolbar>
                    <Toolbar>
                      <Label text="{ListModel>tag}"/>
                      <ToolbarSeparator/>
                      <Label
                        text="{ListModel>title}"
                        design="Bold"/>
                      <ToolbarSpacer/>
                      <Button
                        icon="sap-icon://edit"
                        press="onEditNote"/>
                      <Button
                        icon="sap-icon://decline"
                        press="onDeleteNote"/>
                    </Toolbar>                    
                  </headerToolbar>
                  <content>
                    <VBox>
                      <Text text="{ListModel>note}"/>
                      <Text class="dateNote" text="{ListModel>dateString}"/>
                    </VBox>
                  </content>
                </Panel>
                <!-- <HBox
                  justifyContent="SpaceBetween">
                  <Text text="{ListModel>note}"/>
                  <VBox
                    justifyContent="SpaceAround">
                    <Button
                    icon="sap-icon://decline"
                    press= "onDeleteNote"/>
                  </VBox>              
                </HBox> -->
              </CustomListItem>
            </List>
          </content>
        </ScrollContainer>
      </content>
    </Page>
