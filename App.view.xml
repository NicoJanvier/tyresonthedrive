<mvc:View
  controllerName="HelloWorld.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
    <Page
      enableScrolling="true"
      showFooter="false"
      backgroundDesign="List">
      <customHeader>
        <Bar>
          <contentMiddle>
            <Text text="Note App"/>
          </contentMiddle>
          <contentRight>
            <Button
              icon="sap-icon://add"
              press="onNewNote"/>
          </contentRight>
        </Bar>
      </customHeader>
      <content
        height="max-content">
        <ScrollContainer
          vertical="true"
          horizontal="false">
          <content>
            <List
              items="{ListModel>/noteList}">
              <CustomListItem>
                <HBox
                  justifyContent="SpaceBetween">
                  <Text text="{ListModel>note}"/>
                  <VBox
                    justifyContent="SpaceAround">
                    <Button
                    icon="sap-icon://decline"
                    press= "onDeleteNote"/>
                    <Button
                    icon="sap-icon://edit"
                    press= "onEditNote"/>
                  </VBox>              
                </HBox>
              </CustomListItem>
            </List>
          </content>
        </ScrollContainer>
      </content>
    </Page>
