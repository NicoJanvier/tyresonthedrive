<mvc:View
  controllerName="HelloWorld.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">
      <VBox>
        <Panel
              headerText="Please enter you thought."
              width="100%">
              <content>
                <VBox>
                  <TextArea
                    width="100%"
                    growing="true"
                    valueLiveUpdate="true"
                    value="{InputModel>/InputValue}"/>
                  <Button
                    text="Submit"
                    press="saveNote"/>
                </VBox>
              </content>
        </Panel>
        <List
          items="{ListModel>/noteList}">
          <CustomListItem>
            <HBox>
              <Text text="{ListModel>note}"/>
              <VBox>
                <Button
                icon="sap-icon://decline"
                press= "onDeleteNote"/>
                <Button
                icon="sap-icon://edit"
                press= "onEditNote"/>
              </VBox>              
            </HBox>
          </CustomListItem>
        </List>
      </VBox>
</mvc:View>